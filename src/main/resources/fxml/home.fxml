<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox fx:id="vbox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.swehacker.openhab.fx.screens.HomeScreen">
    <children>
        <TextFlow>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="page-header" text="Devices"/>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TextFlow>
        <FlowPane fx:id="switchPanel" hgap="8.0" vgap="8.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </FlowPane>
        <TextFlow minWidth="-Infinity">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="page-header" text="Sensorer"/>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TextFlow>
        <FlowPane fx:id="sensorPanel" hgap="8.0" vgap="8.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </FlowPane>
    </children>
</VBox>
